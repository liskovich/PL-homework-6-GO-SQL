{{ define "beers_edit" }}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>BeerHunt</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      header {
        background-color: #333;
        color: white;
        padding: 20px;
        text-align: center;
      }
      header h1 {
        margin: 0;
      }
      .btn {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        background-color: #f44336;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
      .btn:hover {
        background-color: #d32f2f;
      }
      main {
        padding: 20px;
      }
      section {
        margin-bottom: 40px;
      }
      section h2 {
        text-align: center;
      }
      .section-img {
        display: flex;
        justify-content: space-around;
        align-items: flex-start;
      }
      .section-img div {
        flex: 0 0 45%;
        position: relative;
        overflow: hidden;
        text-align: center;
        margin-bottom: 10px;
      }
      .section-img img {
        width: 100%;
        max-height: 400px;
        height: auto;
        object-fit: cover;
        border-radius: 5px;
      }
      .author {
        position: absolute;
        bottom: 5px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 12px;
        font-style: italic;
      }
      .section-text {
        text-align: justify;
      }
      .centerText {
        text-align: center;
      }
      .spacedSection {
        margin-top: 50px;
        margin-bottom: 70px;
      }
      /* Your CSS styles for beer cards here */
      .beer-card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 20px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
      }
      .explanation-text {
        font-size: 10px;
        color: red;
      }
    </style>
  </head>
  <body>
    <h1>Edit a Beer</h1>
    <div class="beer-card">
      <form action="/beers/{{ .Beer.ID }}/edit" method="post">
        <input
          type="text"
          name="name"
          placeholder="New Beer Name"
          value="{{ .Beer.Name }}"
          required
        /><br />
        <input
          type="text"
          name="description"
          placeholder="New Beer Description"
          value="{{ .Beer.Description }}"
          required
        /><br />
        <!-- TODO: add more validation to -->
        <input
          type="text"
          name="thumbnail"
          placeholder="Thumbnail Picture"
          value="{{ .Beer.Thumbnail }}"
          required
          readonly
        /><br />
        <p class="explanation-text">
          Provide a URL to your desired beer thumbnail picture. It must end with
          an image extenstion (.png, .jpeg, .jpg, ...).
        </p>
        <input type="submit" value="Update" />
      </form>
    </div>
  </body>
</html>
{{ end }}
